html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width,minimum-scale=1")
    title Login
    // the form awesome library is used to add icons to our form
    link(rel="stylesheet", href="https://use.fontawesome.com/releases/v5.7.1/css/all.css")
    script(src="https://apis.google.com/js/platform.js" async defer)
    meta(name="google-signin-client_id" content="116333806998-rkspnljblle2c2a9hj35inq5ti8lpunp.apps.googleusercontent.com")

    
    // include the stylesheet file
    link(href="./stylesheets/loginform.css", rel="stylesheet", type="text/css")
  body
    div(class='bg-image-2')
    .login
      h1 Create Account
      form(action="/adduser", method="post")
        label(for="username")
          // font awesome icon
          i.fas.fa-user
        input#username(type="text", name="username", placeholder="Username", required value=username)
        label(for="password")
          i.fas.fa-lock
        input#password(type="password", name="password", placeholder="Password", required value=password)
        p=msg
        input(type="submit", value="Create Account")
        div(class="g-signin2" data-onsuccess="onSignIn")


    script. 
          document.querySelector('form').onsubmit = function(e) {
              ele = e.target || e.srcElement 
              
              ele.lastElementChild.disabled=true;
          }
          function onSignIn(googleUser) {
            var profile = googleUser.getBasicProfile();
            console.log('ID: ' + profile.getId()); // Do not send to your backend! Use an ID token instead.
            console.log('Name: ' + profile.getName());
            console.log('Image URL: ' + profile.getImageUrl());
            console.log('Email: ' + profile.getEmail()); // This is null if the 'email' scope is not present.
          }