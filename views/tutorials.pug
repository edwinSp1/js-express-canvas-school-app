extends layout 

block content 

    ul(class='navbar')
        li 
            a(href='/') Home 
        li 
            a(href='tutorials/create') Create Tutorial
    if !loggedin
        p You are not logged in. Create an account to access the full features of mercury!
    i(class='fa-solid fa-x' style='font-size:35px' id='clear-search')
    input(id='search-bar' style='display:inline')
    i(class='fa-solid fa-search' style='font-size:35px' id='search')
    each val in tutorials 
        div(class='tutorial')
            
            h1 
                a(href='/tutorials/' + val._id class='no-deco-link')=val.title
            if val.categories
                each category in val.categories 
                    div(class='category')=category
            p=val.user
            p=val.date
    button(id='back') Prev
    button(id='next') Next
    script(src='/javascripts/tutorialsHome.js')