extends layout

block content
    
  label(for='textarea-content') Area name
  input(name='textarea-content' id='textarea-content')
  button(id='create-new-textarea') New textarea
  button(id='delete-textarea') Delete textarea
  form(action=link method='POST' id='form')
    div(class='top-right')
      h1 Category:
      select(name="category" class="category-select")
        option(value='none') none
        each category in categories
          option(value=category)=category 
    input(name='metadata' id='metadata' style='display:none;')
    div(id='questions' class='draggable' style='top:300px; left:0px;' )
      h1(id='questionsheader') questions
      textarea(name='questions' maxlength='10000')
  
    div(id='main-content' class='draggable' style='top:300px; left:200px;')
      h1(id='main-contentheader') main-content
      textarea(name='main-content' maxlength='10000')
  
    div(id='summary' class='draggable' style='top:300px; left:400px;')
      h1(id='summaryheader') summary
      textarea(name='summary' maxlength='10000')

    div(id='EQ' class='draggable' style='top:300px; left:600px;')
      h1(id='EQheader') Essential Question
      textarea(name='EQ' maxlength='10000')
    div(id='title' class='draggable' style='top:300px; left:800px;')
      h1(id='titleheader') Title
      textarea(name='title' style='font-size: 30px' maxlength='10000')

    input(type='submit' value='Save' id='submit-button')




  script(src='/javascripts/addDoc.js')