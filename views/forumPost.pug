extends layout

block content 
    ul(class='navbar')
        li  
            a(href='/forums') back


    div(class='forum-post big-forum-post')
        h1(class='post-user') #{post.user}
        h1(class='post-title')=post.title
        p(class='post-content')=post.content
        -var className = 'fa-regular' 
        if post.likedBy.includes(post.user)
            - className = 'fa-solid'
        p(class='post-likes') #[i(class="fa-heart FA-icon heart-icon like-post " + className)] #[span(class='post-likes')=post.likedBy.length]
         
    
